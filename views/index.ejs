<script>
    init();

    function init() {
        fetch('/list', {
            method: 'GET',
            headers: {
                'Accept': 'application/json',
            },
        })
            .then(response => response.text())
            .then(text => refreshList(text))
    }

    function search(ele, team, column) {
        if (event.key === 'Enter' && ele.value !== "") {
            fetch('/add', {
                method: 'PUT',
                headers: {
                    'Content-type': 'application/json'
                },
                body: JSON.stringify({
                    "team": team,
                    "column": column,
                    "text": ele.value
                })
            });

            ele.value = ''
        }
    }

    const source = new EventSource('/event');

    source.addEventListener('message', message => {
        console.log('Got', message);
        console.log('Data', event.data);
        refreshList(event.data)
    });

    function getLIChildren(id) {
        let children = document.getElementById(id).childNodes;
        let result = [];
        children.forEach(child => {
            if (child.nodeName === 'LI') {
                result.push(child);
            }
        })
        return result;
    }


    function refreshList(list) {
        list = JSON.parse(list);
        console.log(list[0][0][0])

        for (let i = 0; i < 3; i++) {
            for (let j = 0; j < 3; j++) {

                for (let k = 0; k < list[i][j].length; k++) {
                    let children = getLIChildren('list' + i + j);
                    
                    if (children[k].className === 'list-group-item') {
                        console.log(`${k} <=> ${children.length - 1}`)
                        if (k < children.length - 1) {
                            children[k].innerText = list[i][j][k];
                        } else if (k === children.length - 1) {
                            let li = document.createElement("li");
                            li.className = "list-group-item";
                            li.appendChild(document.createTextNode(list[i][j][k]));
                            children[k].parentNode.insertBefore(li, children[k]);
                        } else {

                        }
                    }

                }
            }
        }


    }
